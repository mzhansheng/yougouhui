<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seekon.yougouhui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_OWNER_DATA" />
    <uses-permission android:name="android.permission.WRITE_USER_DICTIONARY" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	
    <uses-permission android:name="android.permission.CAMERA" />  
    <uses-feature android:name="android.hardware.camera" />  
    <uses-feature android:name="android.hardware.camera.autofocus" />
    
    <application
        android:name="com.seekon.yougouhui.YouGouHuiApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity android:name=".activity.home.MessageActivity" >
        </activity>
        <activity
            android:name=".activity.profile.SettingActivity"
            android:label="@string/title_profie_setting" >
        </activity>

        <service android:name=".func.mess.MessageService" />
        <service android:name=".func.module.ModuleService" />
		<service android:name=".func.discover.share.ShareService" />
		
        <provider
            android:name=".func.mess.ChannelProvider"
            android:authorities="com.seekon.yougouhui.channels"
            android:exported="false" />
        <provider
            android:name=".func.module.ModuleProvider"
            android:authorities="com.seekon.yougouhui.modules"
            android:exported="false" />
        <provider
            android:name=".func.mess.MessageProvider"
            android:authorities="com.seekon.yougouhui.messages"
            android:exported="false" />
		 <provider
            android:name=".func.discover.share.ShareProvider"
            android:authorities="com.seekon.yougouhui.shares"
            android:exported="false" />
		 <provider
            android:name=".func.discover.share.CommentProvider"
            android:authorities="com.seekon.yougouhui.shares.comment"
            android:exported="false" />
		 <provider
            android:name=".func.discover.share.ShareImgProvider"
            android:authorities="com.seekon.yougouhui.shares.image"
            android:exported="false" />
		 
        <activity
            android:name=".activity.discover.FriendShareActivity"
            android:label="@string/title_discover_friends" >
        </activity>
        <activity  android:name=".activity.discover.ShareActivity"
            android:label="@string/title_activity_share"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ImagePreviewActivity" android:label="@string/title_image_preview"></activity>
        <activity android:name=".activity.discover.RadarActivity" android:label="@string/title_discover_radar"></activity>    
       </application>

</manifest>